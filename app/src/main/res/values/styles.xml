<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ripple_style">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ripple_style.sorting">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_16sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/_8ssp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>
</resources>